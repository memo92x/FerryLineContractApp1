@model FerryLineContractApp.DTO.VehicleDTO

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Vehicle</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.VehicleSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VehicleSize)
            @Html.ValidationMessageFor(model => model.VehicleSize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VehicleType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VehicleType)
            @Html.ValidationMessageFor(model => model.VehicleType, "Input Vehicle Type please")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VehiclePrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VehiclePrice)
            @Html.ValidationMessageFor(model => model.VehiclePrice, "Price Most Not Be Empty")
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
